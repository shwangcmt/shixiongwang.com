---
/**
 * Custom Pagination component for course pages.
 * Uses the Flexoki theme's pagination styling (inlined since the package
 * doesn't export overrides).
 *
 * For course pages: calculates prev/next based on course document order.
 * For non-course pages: uses the default Starlight pagination data.
 */
import { Icon } from '@astrojs/starlight/components';
import { getCourseEntries } from '../../lib/course-utils';

const { pathname } = Astro.url;
const entries = await getCourseEntries(pathname);

if (entries && Astro.locals.starlightRoute) {
    const currentIndex = entries.findIndex(e => e.isCurrent);

    if (currentIndex !== -1) {
        const prev = currentIndex > 0
            ? { label: entries[currentIndex - 1].label, href: entries[currentIndex - 1].href }
            : undefined;
        const next = currentIndex < entries.length - 1
            ? { label: entries[currentIndex + 1].label, href: entries[currentIndex + 1].href }
            : undefined;

        (Astro.locals.starlightRoute as any).pagination = { prev, next };
    }
}

// Read final pagination data (possibly overridden above)
const { dir, pagination } = Astro.locals.starlightRoute;
const { prev, next } = pagination;
const isRtl = dir === 'rtl';

if (!prev && !next) {
    return;
}
---

<div class="pagination-links print:hidden" dir={dir as string}>
	{
		prev && (
			<a href={prev.href} rel="prev" class="sl-flex">
				<span class="eyebrow sl-flex">
					<Icon name={isRtl ? 'right-arrow' : 'left-arrow'} size="1.5em" />
					{Astro.locals.t('page.previousLink')}
				</span>
				<span class="link-title">{prev.label}</span>
			</a>
		)
	}
	{
		next && (
			<a href={next.href} rel="next" class="sl-flex">
				<span class="eyebrow sl-flex">
					{Astro.locals.t('page.nextLink')}
					<Icon name={isRtl ? 'left-arrow' : 'right-arrow'} size="1.5em" />
				</span>
				<span class="link-title">{next.label}</span>
			</a>
		)
	}
</div>

<style>
  @layer flexoki {
    .pagination-links {
      display: flex;
      gap: 1rem;
      border-top: 1px solid var(--sl-flexoki-shadow-shade);
      padding-block: 2rem;
    }

    a {
      flex-direction: column;
      font-size: var(--sl-text-body-sm);
      text-decoration: none;
      color: var(--sl-color-gray-3);
      width: 100%;
      flex-grow: 1;
      text-align: left;

      &[rel='next'] {
        align-items: flex-end;
        text-align: right;
      }

      &:hover,
      &:focus-visible {
        color: var(--sl-color-text);
        outline-offset: 0.375rem;
      }
    }
    .eyebrow {
      align-items: center;
      gap: 0.1875rem;
    }
    svg {
      margin-inline: -0.1875em 0;
      [rel='next'] & {
        margin-inline: 0 -0.1875em;
      }
    }
    .link-title {
      font-size: var(--sl-text-lg);
      line-height: var(--sl-line-height-headings);
      font-weight: 600;
    }
  }
</style>
